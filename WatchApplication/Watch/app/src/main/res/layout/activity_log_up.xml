<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background01"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="34dp">
            </View>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="209dp"
                android:layout_height="159dp"
                app:srcCompat="@drawable/create_account" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
            android:id="@+id/txtNicName"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txtbox_shape"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawablePadding="10dp"
            android:hint="@string/your_nickname_signout"
            android:inputType="textNoSuggestions"
            android:padding="15dp"
            android:textColor="@color/Black"
            android:textColorHighlight="@color/BlueBo"
            android:textColorHint="@color/BlueBo" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/txtbox_shape"
                android:drawableLeft="@drawable/ic_email_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/your_e_mail_signout"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/Black"
                android:textColorHighlight="@color/BlueBo"
                android:textColorHint="@color/BlueBo" />

            <EditText
                android:id="@+id/txtPass"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/txtbox_shape"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawablePadding="10dp"
                android:hint="Your Password"
                android:inputType="textNoSuggestions"
                android:padding="15dp"
                android:textColor="@color/Black"
                android:textColorHighlight="@color/BlueBo"
                android:textColorHint="@color/BlueBo" />
            <EditText
                android:id="@+id/txtRePass"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/txtbox_shape"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawablePadding="10dp"
                android:hint="Confirm Password"
                android:inputType="textNoSuggestions"
                android:padding="15dp"
                android:textColor="@color/Black"
                android:textColorHighlight="@color/BlueBo"
                android:textColorHint="@color/BlueBo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>