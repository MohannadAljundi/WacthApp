<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".Bus.BusProfileActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:id="@+id/allarm_profile_bus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_allarm_profile"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:id="@+id/view01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/profil_section_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view01"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bus_profile_img"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                app:civ_border_width="2dp"
                android:src="@drawable/bus_prof_icon" />


            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="163dp"
                android:layout_margin="10dp"
                android:layout_weight="0.75"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtname_profil_bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_person_24dp"
                        android:drawablePadding="10dp"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/txtemail_profil_bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email_24dp"
                        android:drawablePadding="10dp"
                        android:text="@string/email_profil" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btn_setting_profile_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_shape"
                        android:drawableLeft="@drawable/ic_settings_black_24dp"
                        android:text="@string/setting_profile" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="42dp" />

                    <Button
                        android:id="@+id/btn_edit_profile_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_shape"
                        android:drawableLeft="@drawable/ic_edit_24dp"
                        android:text="@string/edit_setting" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/select_pic_bus"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="28dp"
            android:background="@drawable/btn_shape"
            android:padding="2dp"
            android:text="Select Pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profil_menu"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profil_section_bus"
        android:orientation="vertical">


        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/qr_cod_profile_bus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/qr_code" />

        <ImageView
            android:id="@+id/student_home_profile_bus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/student_home_icon" />

        <ImageView
            android:id="@+id/student_on_board_profile_bus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/student_onboard_icon" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/profil_menu">

        <ImageView
            android:id="@+id/go_back_bus_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:baselineAligned="false"
            app:srcCompat="@drawable/ic_arrow_left"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>