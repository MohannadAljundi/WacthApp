<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigateTo">


    <LinearLayout
        android:id="@+id/head_nav_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/location_img_nav_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/location_nav_to" />

        <TextView
            android:id="@+id/head_line_nav_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/Blue_text"
            android:text="@string/navigate_to_headline"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_linar_nav_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/head_nav_to"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <SearchView
            android:id="@+id/search_nav_to"
            style="@style/MySearchView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_search"
            android:pointerIcon="alias" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice_nav_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/search_linar_nav_to"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shcool_img_nav_to"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/school_icon"
                android:drawablePadding="10dp"
                android:padding="15dp" />

            <TextView
                android:id="@+id/txt_nav_to_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/school_nav_to"
                android:textColor="@color/searchBarColor"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_img_nav_to"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/homenav"
                android:drawablePadding="10dp"
                android:padding="15dp" />

            <TextView
                android:id="@+id/home_txt_nav_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/home_nav_to"
                android:textColor="@color/searchBarColor"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_place_img_nav_to"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_add_place"
                android:drawablePadding="10dp"
                android:padding="15dp" />

            <TextView
                android:id="@+id/txt_add_palce_nav_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/add_place_nav_to"
                android:textColor="@color/searchBarColor"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leanir_go_back_nav_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/choice_nav_to">

        <Button
            android:id="@+id/go_back_nav_to"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"

            android:background="@drawable/ic_arrow_left"
            app:srcCompat="@drawable/ic_arrow_left"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>