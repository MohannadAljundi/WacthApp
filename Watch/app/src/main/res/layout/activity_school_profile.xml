<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".School.SchoolProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_icon_school"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_allarm_profile"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/headline_title_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220px"
                android:layout_marginTop="15px"
                android:text="School"
                android:textColor="#05738c"
                android:textSize="25sp"
                android:textStyle="bold"
                />


            <ImageView
                android:id="@+id/btn_Signout_school"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_exit_to_app_black_24dp"
                app:layout_constraintEnd_toEndOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/view01"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_img_profile_school"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/school_icon" />

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="163dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_view_profile_school"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_24dp"
                            android:drawablePadding="10dp"
                            android:text="Name" />

                        <TextView
                            android:id="@+id/email_view_profile_school"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_email_24dp"
                            android:drawablePadding="10dp"
                            android:text="@string/email_profil" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btn_setting_profile_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_shape"
                            android:drawableLeft="@drawable/ic_settings_black_24dp"
                            android:text="@string/setting_profile" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="42dp" />

                        <Button
                            android:id="@+id/btn_edit_profile_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_shape"
                            android:drawableLeft="@drawable/ic_edit_24dp"
                            android:text="@string/edit_setting" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_menu_school"
            android:layout_width="392dp"
            android:layout_height="301dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <Button
                android:id="@+id/add_new_btn_school"
                android:layout_width="386dp"
                android:layout_height="47dp"
                android:layout_marginTop="20px"
                android:background="@drawable/picaddnewbutton" />

            <Button
                android:id="@+id/health_btn_school"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20px"
                android:layout_marginRight="25px"
                android:background="@drawable/pichealthbuttontamplate" />

            <Button
                android:id="@+id/set_location_btn_school"
                android:layout_width="386dp"
                android:layout_height="47dp"
                android:layout_marginTop="20px"
                android:background="@drawable/picbusbuttontamplate"
                android:text="" />

            <Button
                android:id="@+id/student_location_school"
                android:layout_width="386dp"
                android:layout_height="47dp"
                android:layout_marginTop="20px"
                android:background="@drawable/piclocationbuttontamplate"
                android:text="" />

            <Button
                android:id="@+id/attendance_btn_school"
                android:layout_width="386dp"
                android:layout_height="50dp"
                android:layout_marginTop="20px"
                android:background="@drawable/picattenbuttontamplate"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_menu_school"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_back_AllUser_school"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_arrow_left"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>