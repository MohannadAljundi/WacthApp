<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/add_member_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/addbutt" />

            <TextView
                android:id="@+id/textViewNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new_student_res"
                android:textColor="#037599"
                android:textSize="26dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/User_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/profpic" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/studen_add_member_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:text="@string/student_add_member"
                    android:textColor="@color/GreenBo"
                    android:textSize="20dp" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="55dp"
                    android:background="@color/GreenBo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">



            <EditText
                android:id="@+id/name_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_shape2"
                android:hint="@string/name_add_student_res"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bus_number_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_shape2"
                android:hint="@string/bus_number_add_student_res"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_phone_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_shape2"
                android:hint="@string/phone_add_new_student_res"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/age_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_shape2"
                android:hint="@string/age_add_student_res"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Class_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_shape2"
                android:hint="@string/class_add_student"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blood_type_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_shape2"
                android:hint="@string/blood_type_add_student_res"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/QR_add_student"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_shape2"
                android:drawableRight="@drawable/ic_qr"
                android:hint="@string/generate_qr_code_add_student_res"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bktomain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_arrow_left" />

            <View
                android:layout_width="73dp"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/conf_butt"
                android:layout_width="128dp"
                android:layout_height="43dp"
                android:background="@drawable/squar_shape02_circle"
                android:text="Conform"
                android:onClick="AddStudentToFirebase"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>